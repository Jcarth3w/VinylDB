@model IEnumerable<VinylLibrarian.Models.RecordViewModel>
@{
    ViewData["Title"] = "Collection";
}

<h2>Collection</h2>

<div class="record-grid">
    @foreach (var item in Model)
    {
        <div class="record-card">
            <img src="@item.Img" alt="@item.Title" class="record-img" />
            <div class="record-info">
                <div class="record-text">
                    <h3>@item.Title</h3>
                    <p>@item.Artist</p>
                </div>
                <span class="record-genre">@item.Genre</span>
            </div>
        </div>
    }
</div>